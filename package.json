{
  "name": "portfolio",
  "version": "1.0.0",
  "author": "rmyz",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "eslint": "./node_modules/.bin/eslint ./src",
    "stylelint": "./node_modules/.bin/stylelint \"src/**/*.{js,jsx}\"",
    "format": "npm run prettier -- --write",
    "prettier": "./node_modules/.bin/prettier \"src/**/*.{js,jsx,css,json}\""
  },
  "prettier": "./node_modules/@rmyzdev/react-linter/.prettierrc.js",
  "eslintConfig": {
    "extends": "./node_modules/@rmyzdev/react-linter/.eslintrc.js"
  },
  "stylelint": {
    "extends": "./node_modules/@rmyzdev/react-linter/stylelint.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --max-warnings=0"
    ],
    "src/**/*.{js,jsx,css,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "next": "9.3.5",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scroll": "1.7.16",
    "styled-components": "5.1.0"
  },
  "devDependencies": {
    "@rmyzdev/react-linter": "1.3.0",
    "@testing-library/jest-dom": "5.5.0",
    "@testing-library/react": "10.0.3",
    "babel-jest": "25.4.0",
    "husky": "4.2.5",
    "jest": "25.4.0",
    "lint-staged": "10.1.7"
  }
}

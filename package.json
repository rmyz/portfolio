{
  "name": "portfolio",
  "version": "1.0.0",
  "author": "rmyz",
  "scripts": {
    "dev": "rimraf ./.next && next",
    "build": "next build",
    "start": "next start",
    "eslint": "./node_modules/.bin/eslint ./src",
    "stylelint": "./node_modules/.bin/stylelint \"src/**/*.{js,jsx}\"",
    "format": "npm run prettier -- --write",
    "prettier": "./node_modules/.bin/prettier \"src/**/*.{js,jsx,css,json}\""
  },
  "prettier": "./node_modules/@rmyzdev/react-linter/.prettierrc.js",
  "eslintConfig": {
    "extends": "./node_modules/@rmyzdev/react-linter/.eslintrc.js"
  },
  "stylelint": {
    "extends": "./node_modules/@rmyzdev/react-linter/stylelint.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --max-warnings=0"
    ],
    "src/**/*.{js,jsx,css,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "dayjs": "1.9.4",
    "next": "10.0.1",
    "next-pwa": "3.1.5",
    "polished": "3.6.5",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-intersection-observer": "8.30.1",
    "react-simple-animate": "3.3.10",
    "react-tooltip": "4.2.10",
    "styled-components": "5.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@rmyzdev/react-linter": "2.1.0",
    "babel-plugin-styled-components": "1.11.1",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "rimraf": "3.0.2"
  }
}
